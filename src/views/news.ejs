<% news.forEach(item => { %>
  <article class="bg-white rounded-lg shadow-md p-6 mb-6 hover:shadow-lg transition-shadow duration-300">
    <h3 class="text-xl font-semibold mb-2">
      <a href="<%= item.link %>" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">
        <%= item.title %>
      </a>
    </h3>
    <p class="text-gray-700 mb-3">
      <%= item.description.replace(/(<([^>]+)>)/gi, "").slice(0, 200) %>...
    </p>
    <footer class="text-sm text-gray-500 flex justify-between">
      <time datetime="<%= item.pubDate %>"><%= new Date(item.pubDate).toLocaleString() %></time>
      <span class="italic"><%= item.source %></span>
    </footer>
  </article>
<% }) %>
